{
    "name": "Youtube Faster Interface",
    "version": "0.0.1",
    "description": "Dissapear the bottom bar and make the interface faster",
    "manifest_version": 3,
    "author": "Lucas Oyarzún & Cristobal Saldías",
    "matches": ["https://*.youtube.com/*"],
    "content_scripts": [
        {
          "matches": ["https://*.youtube.com/*"],
          "js": ["script.js"]
        }
      ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Youtube Faster Interface"
    }
}